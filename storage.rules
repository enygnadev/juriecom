
rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Função para verificar se o usuário é admin
    function isAdmin() {
      return request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Regras para imagens de produtos (apenas admins podem escrever)
    match /products/{fileName} {
      // Leitura pública para exibir produtos
      allow read: if true;
      
      // Escrita apenas para admins com validação de tipo
      allow write: if isAdmin() && 
        request.resource.contentType.matches('image/.*') &&
        request.resource.size < 10 * 1024 * 1024; // Máximo 10MB
    }
    
    // Regras para avatares de usuários
    match /users/{userId}/avatar.jpg {
      // Ler próprio avatar ou ser admin
      allow read: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      
      // Escrever próprio avatar
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.contentType.matches('image/.*') &&
        request.resource.size < 5 * 1024 * 1024; // Máximo 5MB
    }
    
    // Regras para avatares de usuários com outras extensões
    match /users/{userId}/avatar.png {
      // Ler próprio avatar ou ser admin
      allow read: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      
      // Escrever próprio avatar
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.contentType.matches('image/.*') &&
        request.resource.size < 5 * 1024 * 1024; // Máximo 5MB
    }
    
    // Regras para documentos relacionados a pedidos
    match /documents/{userId}/{fileName} {
      // Ler próprios documentos ou ser admin
      allow read: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      
      // Escrever próprios documentos
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        (request.resource.contentType.matches('image/.*') || 
         request.resource.contentType == 'application/pdf' ||
         request.resource.contentType.matches('text/.*')) &&
        request.resource.size < 10 * 1024 * 1024; // Máximo 10MB
    }
    
    // Regras para arquivos temporários/uploads
    match /temp/{userId}/{fileName} {
      // Apenas usuário autenticado pode acessar seus arquivos temporários
      allow read, write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 20 * 1024 * 1024; // Máximo 20MB para uploads temporários
    }
    
    // Regras para backups (apenas admins)
    match /backups/{fileName} {
      allow read, write: if isAdmin();
    }
    
    // Regras para logs do sistema (apenas admins)
    match /logs/{fileName} {
      allow read, write: if isAdmin();
    }
    
    // Regra padrão - negar acesso a outros caminhos
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
